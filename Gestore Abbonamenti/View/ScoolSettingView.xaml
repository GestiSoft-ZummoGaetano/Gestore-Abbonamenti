<Page x:Class="Gestore_Abbonamenti.View.ScoolSettingView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Gestore_Abbonamenti.View" xmlns:Converters="clr-namespace:Gestore_Abbonamenti.Converters" 
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
      xmlns:ei="http://schemas.microsoft.com/xaml/behaviors"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Language="it-IT"
      Title="ScoolSettingView">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="36"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="1" Margin="20">
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal">
                    <StackPanel Orientation="Vertical">
                        <StackPanel>
                            <TextBlock TextAlignment="Center" Text="CITTA'" Margin="20,0,10,10"/>
                        </StackPanel>

                        <StackPanel>
                            <ComboBox x:Name="SearchList" HorizontalAlignment="Left" VerticalAlignment="Center" Width="200" Height="30" IsEditable="True"  
                                        Style="{StaticResource CustomComboBoxStyle}" Text="{Binding TextCitta}" SelectedItem="{Binding SelectedCitta, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                      SelectedIndex="{Binding IndexCitta}" ItemsSource="{Binding Citta}" IsTextSearchEnabled ="True">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="SelectionChanged">
                                        <ei:InvokeCommandAction Command="{Binding IstitutiCommand}" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </ComboBox>
                        </StackPanel>

                    </StackPanel>
                    <StackPanel Orientation="Vertical" Margin="20,0,0,0">
                        <StackPanel>
                            <TextBlock TextAlignment="Center" Text="ISTITUTO" Margin="20,0,10,10"/>
                        </StackPanel>

                        <StackPanel>
                            <ComboBox HorizontalAlignment="Left" VerticalAlignment="Center" Width="200" Height="30" IsEditable="True"  
                                Style="{StaticResource CustomComboBoxStyle}" Text="{Binding TextIstituto}" SelectedItem="{Binding SelectedIstituto, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                      SelectedIndex="{Binding IndexIstituto}" ItemsSource="{Binding Istituto}" IsTextSearchEnabled ="True"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Orientation="Vertical" Margin="20,0,0,0">
                        <StackPanel>
                            <TextBlock TextAlignment="Center" Text="CODICE ISTITUTO" Margin="20,0,10,10"/>
                        </StackPanel>

                        <StackPanel>
                            <TextBox HorizontalAlignment="Left" VerticalAlignment="Center" Width="200" Height="30" MaxLength="10"
                                Style="{StaticResource CustomTextBoxStyle}" Text="{Binding Scuola.CodiceIstituto}"/>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel>
                        <Button Style="{StaticResource GreyButton}" Content="Cerca" Command="{Binding SearchCommand}" HorizontalAlignment="Right" Margin="2,25,0,0" FontSize="15" Width="90" Height="30"/>
                    </StackPanel>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                    <StackPanel Orientation="Vertical">
                        <StackPanel>
                            <TextBlock TextAlignment="Center" Text="DSTANZA DAL COMUNE (KM)" Margin="20,0,10,10"/>
                        </StackPanel>

                        <StackPanel>
                            <TextBox HorizontalAlignment="Left" VerticalAlignment="Center" Width="200" Height="30"
                                    Style="{StaticResource CustomTextBoxStyle}" Text="{Binding Scuola.DistanzaDalComune}"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <StackPanel Orientation="Vertical" Margin="20,0,0,0">
                        <StackPanel>
                            <TextBlock TextAlignment="Center" Text="PREZZO CEDOLA SETTOMANALE (€)" Margin="0,0,10,10"/>
                        </StackPanel>

                        <StackPanel>
                            <TextBox HorizontalAlignment="Left" VerticalAlignment="Center" Width="200" Height="30"
                                Style="{StaticResource CustomTextBoxStyle}" Text="{Binding Scuola.PrezzoCedolaSettimanale, StringFormat={}{0} €}"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel>
                        <Button Style="{StaticResource BlueButton}" Content="AGGIUNGI" Command="{Binding AddCommand}" HorizontalAlignment="Right" Margin="20,20,0,0" Width="120" Height="40"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="2" VerticalAlignment="Top">
            <Border Grid.Row="0" Background="WhiteSmoke" BorderBrush="WhiteSmoke" BorderThickness="2" Width="auto" Height="35" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="20,0,20,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="1" HorizontalAlignment="Right" Orientation="Horizontal" Margin="0,0,10,0">
                        <TextBox x:Name="SearchText" Width="0" Height="25" VerticalContentAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed" Text="{Binding SearchTable, UpdateSourceTrigger=PropertyChanged}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="TextChanged">
                                    <i:InvokeCommandAction Command="{Binding TextChangedCommand}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </TextBox>
                        <Button Style="{StaticResource CustomButtonStyle}" Click="EnableSearch_Click"  ToolTip="CERCA">
                            <StackPanel>
                                <Image Source="/Resource/Icons/Cerca.png" Width="25"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <Grid Grid.Row="3" VerticalAlignment="Top">
            <DataGrid Style="{StaticResource CustomDataGridStyle}"  HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Auto" Margin="20,0,20,0"
             ItemsSource="{Binding FilterListScuole}" SelectedItem="{Binding RowScuola}" GridLinesVisibility="All" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="MODIFICA" Width="95">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Margin="0" Style="{StaticResource CustomButtonStyle}" Tag="../Resource/Icons/Modifica.png"
                                     Command="{Binding DataContext.UpdateCommand, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="ELIMINA" Width="95">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Margin="0" Style="{StaticResource CustomButtonStyle}" Tag="../Resource/Icons/Delete.png"
                                        Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Binding="{Binding Citta}" Header="CITTA'" Width="187">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="TextAlignment" Value="Center" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Binding="{Binding Istituto}" Header="ISTITUTO" Width="269">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="TextAlignment" Value="Center" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Binding="{Binding Indirizzo}" Header="ISTITUTO" Width="269">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="TextAlignment" Value="Center" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Binding="{Binding CodiceIstituto}" Header="CODICE ISTITUTO" Width="150">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="TextAlignment" Value="Center" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Binding="{Binding DistanzaDalComune, StringFormat={}{0} KM}" Header="DISTANZA DAL COMUNE" Width="AUTO">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="TextAlignment" Value="Center" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Binding="{Binding PrezzoCedolaSettimanale, StringFormat={}{0} €}" Header="CEDOLA SETTIMANALE" Width="AUTO">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="TextAlignment" Value="Center" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Page>
