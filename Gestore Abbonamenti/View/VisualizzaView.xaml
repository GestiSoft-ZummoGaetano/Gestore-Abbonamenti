<Page x:Class="Gestore_Abbonamenti.View.VisualizzaView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Gestore_Abbonamenti.View"
      xmlns:userControl="clr-namespace:Gestore_Abbonamenti.View.UserControl" 
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
      xmlns:ei="http://schemas.microsoft.com/xaml/behaviors"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="VisualizzaView">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="90"/>
        </Grid.RowDefinitions>

        <Grid>
            <TextBlock Text="{Binding Title}" Margin="10" FontSize="20"/>
        </Grid>

        <Grid Grid.Row="1" VerticalAlignment="Top">
            <ScrollViewer VerticalScrollBarVisibility="Auto" x:Name="ScrollViewer">
                <ItemsControl ItemsSource="{Binding AllGenitori}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <userControl:RightContainer Genitore="{Binding}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>

        <Grid Grid.Row="2" Background="WhiteSmoke">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="ANNO" Margin="20,7,0,0"/>
                <ComboBox Style="{StaticResource CustomComboBoxStyle}" HorizontalAlignment="Left" Margin="10,0,0,0" Width="120" Height="30"
                          SelectedIndex="{Binding SelectedIndexYear}" SelectedItem="{Binding FilterForYears}" ItemsSource="{Binding Years}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="SelectionChanged">
                            <ei:InvokeCommandAction Command="{Binding SelectionChangedCommand}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </ComboBox>
                <TextBlock TextAlignment="Center" Text="MOSTRA CEDOLE ESCLUSE" Margin="20,7,10,0"/>
                <ToggleButton Style="{StaticResource CustomToggleButtonStyle}" IsChecked="{Binding BoolCedoleZero}" Command="{Binding ShowCedoleZero}" HorizontalAlignment="Right" ToolTip="CEDOLE = 0"/>
            </StackPanel>
            <Button Style="{StaticResource BlueButton}" Content="STAMPA" VerticalAlignment="Center" Command="{Binding PrintCommand}"/>
            
        </Grid>
    </Grid>
</Page>
