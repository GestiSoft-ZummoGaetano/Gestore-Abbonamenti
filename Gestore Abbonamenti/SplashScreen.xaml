<Window x:Class="Gestore_Abbonamenti.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gestore_Abbonamenti"
        mc:Ignorable="d"
        Title="Avvio..." WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" SizeToContent="WidthAndHeight"
        WindowStyle="None" AllowsTransparency="True" Background="White">
    <Grid Margin="20" Background="White">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Name="splashTitle" Text="Caricamento in corso..." FontSize="16" Margin="0,0,0,10" />
            <ProgressBar Width="250" Height="20" IsIndeterminate="True"/>
        </StackPanel>
    </Grid>
</Window>
